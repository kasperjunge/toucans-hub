{
    "function_name": "quiz_creator",
    "description": "Craft set of answers for a test for a specific question.",
    "properties": {
      "question": {
        "type": "string",
        "description": "The main question being posed."
      },
      "answers": {
        "type": "array",
        "description": "A list of potential answers.",
        "items": {
          "type": "string"
        }
      },
      "rationales": {
        "type": "array",
        "description": "A list of rationales for each answer.",
        "items": {
          "type": "string"
        }
      },
      "correct": {
        "type": "integer",
        "description": "The index (0-based) of the correct answer in the answers list."
      }
    },
    "required": ["question", "answers", "rationales", "correct"]
}
  